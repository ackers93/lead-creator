<div class="home-page">
  <div class="container">
    <div class="welcome-section">
      <h1>Welcome to Lead Creator</h1>
      
      <% if user_signed_in? %>
        <div class="user-info">
          <p>Hello, <span class="user-email"><%= current_user.email %></span>!</p>
          <p>Manage your business leads in one place.</p>
          <div class="auth-links">
            <%= link_to "View My Leads", leads_path, class: "btn btn-primary btn-lg" %>
            <%= link_to "Sign Out", destroy_user_session_path, data: { turbo_method: :delete }, class: "btn btn-secondary" %>
          </div>
        </div>
      <% else %>
        <p>Please sign in or create an account to access the application.</p>
        <div class="auth-links">
          <%= link_to "Sign In", new_user_session_path, class: "btn btn-primary" %>
          <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
